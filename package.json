{
	"name": "tmlanguage",
	"displayName": "TextMate Languages",
	"description": "Syntax highlighter and snippets for JSON/YAML derivitives of TextMate language definition",
	"version": "0.0.3",
	"publisher": "Togusa09",
    "license": "MIT",
	"engines": {
		"vscode": "^0.10.7"
	},
    "repository": {
        "type": "git",
        "url": "https://github.com/Togusa09/vscode-tmlanguage/"
    },
    "bugs":{
        "url": "https://github.com/Togusa09/vscode-tmlanguage/issues"  
    },
    "icon": "images/plist_icon.png",
	"categories": [
		"Languages", "Snippets"
	],
    "main": "./out/src/extension",
    "activationEvents": [
        "onLanguage:xml",
        "onCommand:extension.showCssPropertyPreview"
    ],
	"contributes": {
        "commands": [{
           "command" : "extension.convertFile",
           "title": "Convert File" 
        },
        {
                "command": "extension.showCssPropertyPreview",
                "title": "Show CSS Properties Preview"
        }],
		"languages": [{
            "id": "json-tmlanguage",
            "aliases": ["Sublime Text Syntax Def (JSON)", "json-tmlanguage"],
            "extensions": [".JSON-tmLanguage"],
            "configuration": "./json-tmlanguage.configuration.json"
        },
        {
			"id": "yaml-tmlanguage",
			"aliases": ["Sublime Text Syntax Def (YAML)", "yaml-tmlanguage"],
			"extensions": [".YAML-tmLanguage"],
			"configuration": "./yaml-tmlanguage.configuration.json"
		}],
		"grammars": [
            {
                "language": "json-tmlanguage",
                "scopeName": "source.json-tmlanguage",
                "path": "./syntaxes/json-tmlanguage.tmLanguage"
            },
            {
                "language": "yaml-tmlanguage",
                "scopeName": "source.yaml-tmlanguage",
                "path": "./syntaxes/yaml-tmlanguage.tmLanguage"
		    }
        ],
        "snippets": [
            {
                "language": "json-tmlanguage",
                "path": "./snippets/json-tmlanguage.json"
            },
            {
                "language": "yaml-tmlanguage",
                "path": "./snippets/yaml-tmlanguage.json"
            }
        ]
	},
    "scripts": {
        "vscode:prepublish": "node ./node_modules/vscode/bin/compile",
		"compile": "node ./node_modules/vscode/bin/compile -watch -p ./",
        "watch": "node ./node_modules/typescript/bin/tsc -w -p ./src",
        "postinstall": "node ./node_modules/vscode/bin/install"
    },
    "dependencies": {
        "plist": "^1.2.0",
        "format-json" : "^1.0.3"
    },
    "devDependencies": {
        "typescript": "^1.7.5",
        "vscode": "^0.11.x"
    }
}